<Application x:Class="ProcessDesigner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ProcessControl Dll resources, you need all of these -->
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/Shared.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/ScrollBar.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/Expander.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/GroupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/ToolTip.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/ScrollViewer.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/ZoomBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/DesignerItems.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ProcessControl;component/Resources/Styles/PopupWindow.xaml" />

                <!-- CustomControl Dll resources, you need all of these -->
                <ResourceDictionary Source="pack://application:,,,/FileAccess;component/Resources/Styles/FileReadDataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
